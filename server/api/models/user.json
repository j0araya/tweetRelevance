{
  "name": "user",
  "plural": "Users",
  "base": "User",
  "idInjection": true,
  "strict": "filter",
  "mixins": {
    "TimeStamp": {
      "createdAt": "created",
      "updatedAt": "modified",
      "required": false,
      "validateUpsert": true,
      "silenceWarnings": false
    },
    "ReadOnly": {
      "created": true,
      "modified": true
    }
  },
  "properties": {
    "cardNumberEnd": {
      "type": "string",
      "default": ""
    },
    "coupon": {
      "type": "string"
    },
    "admin": {
      "type": "boolean"
    },
    "beta": {
      "type": "boolean"
    },
    "name": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["active", "banned", "blocked"],
      "default": "active"
    },
    "bypassStripe": {
      "type": "boolean"
    },
    "resetPasswordToken": {
      "type": "string"
    },
    "resetPasswordExpires": {
      "type": "date"
    },
    "activateToken": {
      "type": "string"
    },
    "activateExpires": {
      "type": "date"
    },
    "tokenCreditCard": {
      "type": "string"
    }
  },
  "hidden": ["coupon", "resetPasswordToken", "resetPasswordExpires", "activateToken", "activateExpires", "tokenCreditCard"],
  "validations": [],
  "relations": {
    "plan": {
      "type": "belongsTo",
      "model": "Plan",
      "foreignKey": "planId",
      "options": {
        "validate": true,
        "required": true,
        "forceId": true
      }
    }
  },
  "acls": [],
  "methods": {
    "reset": {
      "accepts": [{
        "arg": "email",
        "type": "string",
        "http": {
          "source": "path"
        }
      }],
      "returns": [],
      "description": "peticion de reset de contraseña",
      "http": [{
        "path": "/reset/:email",
        "verb": "get"
      }]
    },
    "resetPassword": {
      "accepts": [{
          "arg": "password",
          "type": "string",
          "required": true,
          "http": {
            "source": "form"
          }
        },
        {
          "arg": "token",
          "type": "string",
          "required": true,
          "http": {
            "source": "form"
          }
        },
        {
          "arg": "email",
          "type": "string",
          "required": true,
          "http": {
            "source": "path"
          }
        }
      ],
      "description": "cambio de contraseña mediante token",
      "http": [{
        "path": "/reset/:email",
        "verb": "post"
      }]
    },
    "activate": {
      "accepts": [{
        "arg": "token",
        "type": "string",
        "required": true,
        "http": {
          "source": "path"
        }
      }],
      "returns": [],
      "description": "verificar correo mediante token",
      "http": [{
        "path": "/activate/:token",
        "verb": "get"
      }]
    },
    "mePath": {
      "accepts": [{
        "arg": "req",
        "type": "object",
        "http": {
          "source": "req"
        }
      }],
      "returns": [{
        "arg": "user",
        "type": "object",
        "root": true,
        "description": "usuario logeado"
      }],
      "description": "informacion del usuario logeado",
      "http": [{
        "path": "/me",
        "verb": "patch"
      }]
    }
  }
}
